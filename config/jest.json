{
    "rootDir": "../",
    "testRegex": "\\.spec\\.ts$",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      ".ts": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/src/**/*.ts",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": ["node_modules", "src/app", "src/@types"],
    "verbose": true
  }